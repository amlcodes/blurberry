{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/common/**/*",
    "src/renderer/sidebar/**/*",
    "src/renderer/topbar/**/*",
    "src/preload/*.d.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@renderer/*": ["src/renderer/src/*"],
      "@common/*": ["src/renderer/common/*"],
      "@preload/*": ["src/preload/*"]
    }
  }
}
